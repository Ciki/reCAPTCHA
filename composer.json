{
  "name": "minetro/recaptcha",
  "description": "Google reCAPTCHA for Nette - Forms",
  "keywords": ["nette", "forms", "captcha", "recaptcha", "google"],
  "type": "library",
  "license": ["BSD-3-Clause"],
  "homepage": "https://github.com/minetro/reCAPTCHA",
  "authors": [
    {
      "name": "Milan Felix Sulc",
      "homepage": "https://jfx.cz"
    }
  ],
  "suggest": {
    "ext-openssl": "To make requests via https"
  },
  "require": {
    "php": ">= 5.6",
    "nette/di": "~2.4.0",
    "nette/forms": "~2.4.0",
    "nette/utils": "~2.4.0"
  },
  "require-dev": {
    "nette/tester": "~1.7.0",
    "ninjify/qa": "^0.2"
  },
  "autoload": {
    "psr-4": {
      "Minetro\\Forms\\reCAPTCHA\\": "src"
    }
  },
  "scripts": {
    "qa": [
      "@qa-codesniffer",
      "@qa-linter"
    ],
    "qa-codesniffer": [
      "Ninjify\\Composer\\Script\\CodeSniffer::execute"
    ],
    "qa-codefixer": [
      "Ninjify\\Composer\\Script\\CodeFixer::execute"
    ],
    "qa-linter": [
      "Ninjify\\Composer\\Script\\Linter::execute"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.7.x-dev"
    },
    "ninjify": {
      "qa": {
        "codesniffer": {
          "folders": ["src", "tests"]
        },
        "codefixer": {
          "folders": ["src", "tests"]
        },
        "linter": {
          "folders": ["src", "tests"]
        }
      }
    }
  }
}
